<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyBajiListActivity">


    <LinearLayout
        android:padding="@dimen/_10sdp"
        android:layout_margin="@dimen/_3sdp"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="@drawable/bg_gra_pink"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <androidx.cardview.widget.CardView
                android:padding="@dimen/_3sdp"
                app:cardCornerRadius="@dimen/_8sdp"
                app:cardBackgroundColor="@color/Pink"
                android:layout_margin="@dimen/_5sdp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

               <LinearLayout
                   android:orientation="vertical"
                   android:padding="@dimen/_3sdp"
                   android:gravity="center_horizontal"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">
                   <TextView
                       android:textAppearance="@style/TextAppearance.AppCompat.Large"
                       android:textColor="@color/OrangeRed"
                       android:textSize="@dimen/_12sdp"
                       android:text="Total Baji Placed"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"/>

                   <TextView
                       android:id="@+id/txtTotalBaji"
                       android:textColor="@color/CornflowerBlue"
                       android:textSize="@dimen/_16sdp"
                       android:text="00"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"/>
               </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:padding="@dimen/_3sdp"
                app:cardCornerRadius="@dimen/_8sdp"
                app:cardBackgroundColor="@color/Pink"
                android:layout_margin="@dimen/_5sdp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:padding="@dimen/_3sdp"
                    android:gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"
                        android:textColor="@color/OrangeRed"
                        android:textSize="@dimen/_12sdp"
                        android:text="Total Baji Win"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/txtTotalBajiWin"
                        android:textColor="@color/CornflowerBlue"
                        android:textSize="@dimen/_16sdp"
                        android:text="00"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <androidx.cardview.widget.CardView
                android:padding="@dimen/_3sdp"
                app:cardCornerRadius="@dimen/_8sdp"
                app:cardBackgroundColor="@color/Pink"
                android:layout_margin="@dimen/_5sdp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:padding="@dimen/_3sdp"
                    android:gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"
                        android:textColor="@color/OrangeRed"
                        android:textSize="@dimen/_12sdp"
                        android:text="Today Baji Placed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/txtTodayBajiPlace"
                        android:textColor="@color/CornflowerBlue"
                        android:textSize="@dimen/_16sdp"
                        android:text="00"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:padding="@dimen/_3sdp"
                app:cardCornerRadius="@dimen/_8sdp"
                app:cardBackgroundColor="@color/Pink"
                android:layout_margin="@dimen/_5sdp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:padding="@dimen/_3sdp"
                    android:gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"
                        android:textColor="@color/OrangeRed"
                        android:textSize="@dimen/_12sdp"
                        android:text="Today Baji Win"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/txtTodayBajiWin"
                        android:textColor="@color/CornflowerBlue"
                        android:textSize="@dimen/_16sdp"
                        android:text="00"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </LinearLayout>

   <RelativeLayout
       android:paddingEnd="@dimen/_3sdp"
       android:paddingStart="@dimen/_3sdp"
       android:paddingTop="@dimen/_10sdp"
       android:layout_marginStart="@dimen/_3sdp"
       android:layout_marginEnd="@dimen/_3sdp"
       android:background="@drawable/bg_gra_1"
       android:layout_width="match_parent"
       android:layout_height="match_parent">
       <LinearLayout
           android:id="@+id/recyHead"
           android:layout_marginBottom="@dimen/_2sdp"
           android:padding="@dimen/_5sdp"
           android:background="@drawable/bg_recycler_head"
           android:weightSum="10"
           android:orientation="horizontal"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <LinearLayout
               android:gravity="center_horizontal"
               android:layout_gravity="center_vertical"
               android:layout_weight="1.5"
               android:layout_width="0dp"
               android:layout_height="wrap_content">

               <TextView
                   android:id="@+id/txtDate"
                   android:layout_width="wrap_content"
                   android:layout_height="match_parent"
                   android:text="Date"
                   android:textColor="@color/White"
                   android:textSize="@dimen/_10sdp" />
           </LinearLayout>



           <LinearLayout
               android:layout_gravity="center_vertical"
               android:gravity="center_horizontal"
               android:layout_weight="1"
               android:layout_width="0dp"
               android:layout_height="wrap_content">
               <TextView
                   android:gravity="center_horizontal"
                   android:layout_gravity="center_horizontal"
                   android:textSize="@dimen/_10sdp"
                   android:textColor="@color/White"
                   android:text="Baji No."
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>
           </LinearLayout>

           <LinearLayout
               android:layout_gravity="center_vertical"
               android:gravity="center_horizontal"
               android:layout_weight="1"
               android:layout_width="0dp"
               android:layout_height="wrap_content">
               <TextView
                   android:id="@+id/txtBtn"
                   android:textSize="@dimen/_10sdp"
                   android:textColor="@color/White"
                   android:text="Btn"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>
           </LinearLayout>
           <LinearLayout
               android:layout_gravity="center_vertical"
               android:gravity="center_horizontal"
               android:layout_weight="1"
               android:layout_width="0dp"
               android:layout_height="wrap_content">
               <TextView
                   android:textSize="@dimen/_10sdp"
                   android:textColor="@color/White"
                   android:text="Pack"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>
           </LinearLayout>
           <LinearLayout
               android:layout_gravity="center_vertical"
               android:gravity="center_horizontal"
               android:layout_weight="1.2"
               android:layout_width="0dp"
               android:layout_height="wrap_content">
               <TextView
                   android:text="Result"
                   android:id="@+id/imgResultPub"
                   android:textSize="@dimen/_10sdp"
                   android:textColor="@color/White"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>
           </LinearLayout>

           <LinearLayout
               android:layout_gravity="center_vertical"
               android:gravity="center_horizontal"
               android:layout_weight="1"
               android:layout_width="0dp"
               android:layout_height="wrap_content">
               <TextView
                   android:text="Win"
                   android:textSize="@dimen/_10sdp"
                   android:textColor="@color/White"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>
           </LinearLayout>

           <LinearLayout
               android:layout_gravity="center_vertical"
               android:gravity="center_horizontal"
               android:layout_weight="2"
               android:layout_width="0dp"
               android:layout_height="wrap_content">
               <TextView
                   android:id="@+id/txtPrice"
                   android:text="Amount"
                   android:textSize="@dimen/_10sdp"
                   android:textColor="@color/White"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>
           </LinearLayout>

           <LinearLayout
               android:layout_gravity="center_vertical"
               android:gravity="center_horizontal"
               android:layout_weight="1.3"
               android:layout_width="0dp"
               android:layout_height="wrap_content">
               <FrameLayout
                   android:layout_gravity="center"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">

                   <TextView
                       android:id="@+id/txtClaim"
                       android:textColor="@color/White"
                       android:padding="3dp"
                       android:layout_gravity="center"
                       android:text="Claim"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"/>
               </FrameLayout>
           </LinearLayout>
       </LinearLayout>


       <androidx.recyclerview.widget.RecyclerView
           android:layout_above="@+id/progress"
           android:layout_below="@+id/recyHead"
           android:id="@+id/recyclerMyBaji"
           android:layout_width="match_parent"
           android:layout_height="match_parent"/>

       <ProgressBar
           android:layout_alignParentBottom="true"
           android:visibility="gone"
           android:id="@+id/progress"
           android:layout_centerHorizontal="true"
           android:layout_width="@dimen/_40sdp"
           android:layout_height="@dimen/_40sdp"/>

       <LinearLayout
           android:id="@+id/layoutReload"
           android:visibility="gone"
           android:orientation="vertical"
           android:gravity="center_horizontal"
           android:layout_centerInParent="true"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">

           <ImageView
               android:src="@drawable/poor"
               android:layout_width="@dimen/_100sdp"
               android:layout_height="@dimen/_100sdp"/>

           <TextView
               android:textColor="@color/BlueViolet"
               android:layout_margin="@dimen/_8sdp"
               android:padding="@dimen/_5sdp"
               android:background="@drawable/bg_gra_btn_signin"
               android:textSize="@dimen/_13sdp"
               android:text="Try Again"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"/>
       </LinearLayout>
   </RelativeLayout>


</LinearLayout>