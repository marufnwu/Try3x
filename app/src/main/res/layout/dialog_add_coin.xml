<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    app:cardCornerRadius="8dp"
    android:layout_marginStart="@dimen/_20sdp"
    android:layout_marginEnd="@dimen/_20sdp"
    android:padding="@dimen/_15sdp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
   <LinearLayout
       android:orientation="vertical"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <ImageView
           android:src="@drawable/curve_shape"
           android:layout_width="match_parent"
           android:layout_height="@dimen/_35sdp"/>

       <ImageView
           android:layout_margin="@dimen/_5sdp"
           android:layout_gravity="center_horizontal"
           android:src="@drawable/poor"
           android:layout_width="@dimen/_60sdp"
           android:layout_height="@dimen/_60sdp"/>
       <TextView
           android:textColor="#0781B8"
           android:padding="@dimen/_8sdp"
           android:gravity="center_horizontal"
           android:textSize="@dimen/_14sdp"
           android:text="Sorry! You have not enough coin to place game. Please BUY COIN to place game."
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"/>

       <LinearLayout
           android:layout_marginBottom="@dimen/_15sdp"
           android:gravity="end"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <TextView
               android:id="@+id/txtCancel"
               android:layout_margin="@dimen/_3sdp"
               android:paddingBottom="@dimen/_5sdp"
               android:paddingTop="@dimen/_5sdp"
               android:paddingEnd="@dimen/_10sdp"
               android:paddingStart="@dimen/_10sdp"
               android:textSize="@dimen/_15sdp"
               android:textColor="@color/white"
               android:background="@drawable/update_btn_1"
               android:text="Cancel"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"/>

           <TextView
               android:id="@+id/txtBuyCoin"
               android:layout_margin="@dimen/_3sdp"
               android:paddingBottom="@dimen/_5sdp"
               android:paddingTop="@dimen/_5sdp"
               android:paddingEnd="@dimen/_10sdp"
               android:paddingStart="@dimen/_10sdp"
               android:textSize="@dimen/_15sdp"

               android:textColor="@color/white"
               android:background="@drawable/update_btn_bg"
               android:text="Buy Coin"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"/>
       </LinearLayout>
   </LinearLayout>
</androidx.cardview.widget.CardView>