<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/layoutParrent"
    android:layout_margin="@dimen/_8sdp"
    android:background="@drawable/bg_gra_black"
    android:gravity="center_horizontal"
    android:weightSum="6"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:gravity="center_horizontal"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/txtSl"
                    android:textStyle="bold"
                    android:textColor="@color/White"
                    android:padding="@dimen/_8sdp"
                    android:background="@drawable/update_btn_1"
                    android:layout_margin="@dimen/_5sdp"
                    android:textSize="@dimen/_15sdp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_horizontal"
                    android:text="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/txtPackName"
                    android:textStyle="bold"
                    android:textColor="@color/Gainsboro"
                    android:padding="@dimen/_8sdp"
                    android:layout_margin="@dimen/_5sdp"
                    android:textSize="@dimen/_13sdp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_horizontal"
                    android:text="Package - 1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:layout_gravity="center_horizontal"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/txtPrice"
                    android:textStyle="bold"
                    android:textColor="@color/colorAccent"
                    android:padding="@dimen/_8sdp"
                    android:layout_margin="@dimen/_5sdp"
                    android:textSize="@dimen/_13sdp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_horizontal"
                    android:text="800 Rp."
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/layForeground"
            android:background="@drawable/bg_white_rounded_trans"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </FrameLayout>


</LinearLayout>