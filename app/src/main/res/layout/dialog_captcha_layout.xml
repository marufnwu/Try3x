<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="@dimen/_8sdp"
    android:layout_margin="@dimen/_5sdp"
    app:cardBackgroundColor="@color/DarkSlateBlue"
    android:layout_width="match_parent"
    app:cardCornerRadius="@dimen/_8sdp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_marginBottom="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:padding="@dimen/_8sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/brain"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_60sdp"/>
        <TextView
            android:textSize="@dimen/_14sdp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:padding="@dimen/_5sdp"
            android:text="প্রশ্নটির সঠিক উত্তর দিন।"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/txtQues"
            android:layout_margin="@dimen/_8sdp"
            android:textStyle="bold"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:textColor="@color/White"
            android:textSize="@dimen/_18sdp"
            android:text="12+13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:src="@drawable/equal"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"/>

        <EditText
            android:inputType="numberDecimal"
            android:id="@+id/edtResult"
            android:gravity="center"
            android:padding="@dimen/_5sdp"
            android:hint="Result"
            android:textSize="@dimen/_17sdp"
            android:background="@drawable/round_corner"
            android:layout_margin="@dimen/_5sdp"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="wrap_content"
           />


        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:paddingEnd="@dimen/_20sdp"
                android:paddingStart="@dimen/_20sdp"
                android:id="@+id/btnCancel"
                android:textStyle="bold"
                android:textSize="@dimen/_13sdp"
                android:textColor="@color/white"
                android:background="@drawable/update_btn_1"
                android:layout_margin="@dimen/_5sdp"
                android:text="CANCEL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <Button
                android:paddingEnd="@dimen/_20sdp"
                android:paddingStart="@dimen/_20sdp"
                android:id="@+id/btnSubmit"
                android:textStyle="bold"
                android:textSize="@dimen/_13sdp"
                android:textColor="@color/white"
                android:background="@drawable/update_btn_bg"
                android:layout_margin="@dimen/_5sdp"
                android:text="Submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>


</androidx.cardview.widget.CardView>