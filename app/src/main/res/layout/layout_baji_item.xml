<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_marginBottom="@dimen/_2sdp"
        android:padding="@dimen/_5sdp"
        android:background="@drawable/bg_gra_pink"
        android:weightSum="9"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="center_horizontal"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txtDate"
                android:textSize="@dimen/_10sdp"
                android:textColor="@color/White"
                android:text="12-06-20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_gravity="center_vertical"
            android:gravity="center_horizontal"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txtBajiNo"
                android:textSize="@dimen/_10sdp"
                android:textColor="@color/White"
                android:text="5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_gravity="center_vertical"
            android:gravity="center_horizontal"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/txtBtn"
                android:textSize="@dimen/_10sdp"
                android:textColor="@color/White"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_20sdp"/>
        </LinearLayout>

       <!-- <LinearLayout
            android:layout_gravity="center_vertical"
            android:gravity="center_horizontal"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txtPack"
                android:textSize="@dimen/_10sdp"
                android:textColor="@color/White"
                android:text="Pack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>-->

        <LinearLayout
            android:layout_gravity="center_vertical"
            android:gravity="center_horizontal"
            android:layout_weight="1.2"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/imgResultPub"
                android:textSize="@dimen/_16sdp"
                android:textColor="@color/White"
                android:src="@drawable/ic_baseline_cancel_24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_gravity="center_vertical"
            android:gravity="center_horizontal"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/imgWin"
                android:textSize="@dimen/_16sdp"
                android:textColor="@color/White"
                android:src="@drawable/ic_baseline_check_circle_24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_gravity="center_vertical"
            android:gravity="center_horizontal"
            android:layout_weight="1.5"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txtPrice"
                android:text="800 Rp"
                android:textSize="@dimen/_10sdp"
                android:textColor="@color/White"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_gravity="center_vertical"
            android:gravity="center_horizontal"
            android:layout_weight="1.3"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <FrameLayout
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/imgClaim"
                    android:layout_gravity="center"
                    android:textSize="@dimen/_16sdp"
                    android:textColor="@color/White"
                    android:src="@drawable/ic_baseline_check_circle_24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/txtClaim"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@drawable/bg_gra_viewpager"
                    android:padding="3dp"
                    android:text="Claim"
                    android:textColor="@color/Black" />
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>