<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="@dimen/_13sdp"
    android:layout_margin="@dimen/_10sdp"
    android:background="@drawable/bg_gra_pink"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
   <LinearLayout
       android:orientation="vertical"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <ImageView
           android:src="@drawable/payout_image"
           android:layout_width="match_parent"
           android:layout_height="@dimen/_100sdp"/>

       <TextView
           android:textStyle="bold"
           android:textColor="@color/White"
           android:textSize="@dimen/_13sdp"
           android:layout_marginTop="@dimen/_8sdp"
           android:layout_marginStart="@dimen/_8sdp"
           android:padding="@dimen/_5sdp"
           android:text="Enter Your Paytm/Phonepay/Gpay Number"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"/>
       <EditText
           android:textStyle="bold"
           android:background="@color/white"
           android:inputType="phone"
           android:id="@+id/payNum1"
           android:padding="@dimen/_5sdp"
           android:drawablePadding="@dimen/_5sdp"
           android:textSize="@dimen/_13sdp"
           android:layout_margin="@dimen/_8sdp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"/>

       <TextView
           android:textStyle="bold"
           android:textColor="@color/White"
           android:textSize="@dimen/_13sdp"
           android:layout_marginTop="@dimen/_8sdp"
           android:layout_marginStart="@dimen/_8sdp"
           android:padding="@dimen/_5sdp"
           android:text="Enter Your Paytm/Phonepay/Gpay Number Again"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"/>
       <EditText
           android:background="@color/white"
           android:inputType="phone"
           android:id="@+id/payNum2"
           android:padding="@dimen/_5sdp"
           android:drawablePadding="@dimen/_5sdp"
           android:textSize="@dimen/_13sdp"
           android:layout_margin="@dimen/_8sdp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"/>


       <LinearLayout
           android:gravity="end"
           android:orientation="horizontal"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <Button
               android:id="@+id/btnCancel"
               android:layout_margin="@dimen/_8sdp"
               android:textSize="@dimen/_13sdp"
               android:textColor="@color/White"
               android:background="@color/Red"
               android:text="Cancel"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"/>

           <Button
               android:id="@+id/btnPayout"
               android:layout_margin="@dimen/_8sdp"
               android:textSize="@dimen/_13sdp"
               android:textColor="@color/Black"
               android:background="@color/LawnGreen"
               android:text="PAYOUT"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"/>
       </LinearLayout>

       <ImageView
           android:id="@+id/imgBanner"
           android:layout_width="match_parent"
           android:layout_height="@dimen/_150sdp"
           android:visibility="gone" />

       <ImageView
           android:id="@+id/ImgWpContact"
            android:src="@drawable/livechat"
           android:layout_width="match_parent"
           android:layout_height="80dp"/>
   </LinearLayout>
</ScrollView>