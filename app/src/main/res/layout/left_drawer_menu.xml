<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFDFD"
    android:fillViewport="true">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/nav_head_bg"
            android:gravity="bottom"
            android:orientation="vertical"
            android:padding="@dimen/_8sdp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/navImgProfile"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:paddingTop="8dp"
                android:src="@drawable/person"
                app:civ_border_color="@color/white"
                app:civ_border_width="@dimen/_2sdp" />

            <TextView
                android:textStyle="bold"
                android:layout_marginStart="@dimen/_10sdp"
                android:textSize="@dimen/_13sdp"
                android:id="@+id/txtNavUserName"
                android:textColor="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/_5sdp"
                android:text="N/A"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

            <TextView
                android:textStyle="bold"
                android:layout_marginStart="@dimen/_10sdp"
                android:textSize="@dimen/_10sdp"
                android:id="@+id/txtNavUserMail"
                android:textColor="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="2dp"
                android:text="N/A "
                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <!--Line Sep-->
            <LinearLayout
                android:id="@+id/layProfile"
                android:background="#0C00B0FF"
                android:layout_margin="@dimen/_3sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:weightSum="5"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/_2sdp"
                        android:padding="@dimen/_1sdp"
                        android:layout_weight="1"
                        android:src="@drawable/person"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_40sdp"/>

                    <LinearLayout
                        android:orientation="vertical"
                        android:padding="@dimen/_4sdp"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_weight="3.5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textColor="@color/black"
                            android:textSize="@dimen/_13sdp"
                            android:textStyle="bold"
                            android:text="Profile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:textSize="@dimen/_13sdp"
                            android:text="See profile info and edit, add payment method"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>


                    </LinearLayout>
                    <ImageView
                        android:layout_gravity="center"
                        android:layout_weight="0.5"
                        android:src="@drawable/ic_round_arrow_forward_ios_24"
                        android:layout_width="@dimen/dimen_0dp"
                        android:layout_height="@dimen/_20sdp"/>


                </LinearLayout>
            </LinearLayout>

            <!--Line Sep-->
            <LinearLayout
                android:id="@+id/layMyBaji"
                android:background="#0C00B0FF"
                android:layout_margin="@dimen/_3sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:weightSum="5"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/_2sdp"
                        android:padding="@dimen/_1sdp"
                        android:layout_weight="1"
                        android:src="@drawable/mybaji"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_40sdp"/>

                    <LinearLayout
                        android:orientation="vertical"
                        android:padding="@dimen/_4sdp"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_weight="3.5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textColor="@color/black"
                            android:textSize="@dimen/_13sdp"
                            android:textStyle="bold"
                            android:text="My Game (দেখে নিন আপনি কবে কোন বাজি ধরেছেন)"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:textSize="@dimen/_13sdp"
                            android:text="See placed game and game result. Claim your coin."
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>


                    </LinearLayout>
                    <ImageView
                        android:layout_gravity="center"
                        android:layout_weight="0.5"
                        android:src="@drawable/ic_round_arrow_forward_ios_24"
                        android:layout_width="@dimen/dimen_0dp"
                        android:layout_height="@dimen/_20sdp"/>


                </LinearLayout>
            </LinearLayout>
            <!--Line Sep-->
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/layTransaction"
                android:background="#0C00B0FF"
                android:layout_margin="@dimen/_3sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:weightSum="5"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/_2sdp"
                        android:padding="@dimen/_1sdp"
                        android:layout_weight="1"
                        android:src="@drawable/commission"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_40sdp"/>

                    <LinearLayout
                        android:orientation="vertical"
                        android:padding="@dimen/_4sdp"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_weight="3.5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textColor="@color/black"
                            android:textSize="@dimen/_13sdp"
                            android:textStyle="bold"
                            android:text="My Transaction"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:textSize="@dimen/_13sdp"
                            android:text="See all transaction history, recheck any payment issue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>


                    </LinearLayout>
                    <ImageView
                        android:layout_gravity="center"
                        android:layout_weight="0.5"
                        android:src="@drawable/ic_round_arrow_forward_ios_24"
                        android:layout_width="@dimen/dimen_0dp"
                        android:layout_height="@dimen/_20sdp"/>


                </LinearLayout>
            </LinearLayout>


            <!--Line Sep-->
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/layAddCoin"
                android:background="#0C00B0FF"
                android:layout_margin="@dimen/_3sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:weightSum="5"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/_2sdp"
                        android:padding="@dimen/_1sdp"
                        android:layout_weight="1"
                        android:src="@drawable/buy"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_40sdp"/>

                    <LinearLayout
                        android:orientation="vertical"
                        android:padding="@dimen/_4sdp"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_weight="3.5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textColor="@color/black"
                            android:textSize="@dimen/_13sdp"
                            android:textStyle="bold"
                            android:text="Buy Coin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:textSize="@dimen/_13sdp"
                            android:text="Buy coin with exclusive discount for place baji."
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>


                    </LinearLayout>
                    <ImageView
                        android:layout_gravity="center"
                        android:layout_weight="0.5"
                        android:src="@drawable/ic_round_arrow_forward_ios_24"
                        android:layout_width="@dimen/dimen_0dp"
                        android:layout_height="@dimen/_20sdp"/>


                </LinearLayout>
            </LinearLayout>


            <!--Line Sep-->
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/layMycoin"
                android:background="#0C00B0FF"
                android:layout_margin="@dimen/_3sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:weightSum="5"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/_2sdp"
                        android:padding="@dimen/_1sdp"
                        android:layout_weight="1"
                        android:src="@drawable/mycoin"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_40sdp"/>

                    <LinearLayout
                        android:orientation="vertical"
                        android:padding="@dimen/_4sdp"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_weight="3.5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textColor="@color/black"
                            android:textSize="@dimen/_13sdp"
                            android:textStyle="bold"
                            android:text="My Coin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:textSize="@dimen/_13sdp"
                            android:text="See your current account coin, coin history"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>


                    </LinearLayout>
                    <ImageView
                        android:layout_gravity="center"
                        android:layout_weight="0.5"
                        android:src="@drawable/ic_round_arrow_forward_ios_24"
                        android:layout_width="@dimen/dimen_0dp"
                        android:layout_height="@dimen/_20sdp"/>


                </LinearLayout>
            </LinearLayout>




            <!--Line Sep-->
            <LinearLayout
                android:visibility="gone"

                android:id="@+id/layWithdraw"
                android:background="#0C00B0FF"
                android:layout_margin="@dimen/_3sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:weightSum="5"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/_2sdp"
                        android:padding="@dimen/_1sdp"
                        android:layout_weight="1"
                        android:src="@drawable/withraw"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_40sdp"/>

                    <LinearLayout
                        android:orientation="vertical"
                        android:padding="@dimen/_4sdp"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_weight="3.5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textColor="@color/black"
                            android:textSize="@dimen/_13sdp"
                            android:textStyle="bold"
                            android:text="Withdrawable Coin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:textSize="@dimen/_13sdp"
                            android:text="Make withdraw from coin to cash and see withdraw history."
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>


                    </LinearLayout>
                    <ImageView
                        android:layout_gravity="center"
                        android:layout_weight="0.5"
                        android:src="@drawable/ic_round_arrow_forward_ios_24"
                        android:layout_width="@dimen/dimen_0dp"
                        android:layout_height="@dimen/_20sdp"/>


                </LinearLayout>
            </LinearLayout>


            <!--Line Sep-->
            <LinearLayout
                android:visibility="gone"

                android:id="@+id/layCommission"
                android:background="#0C00B0FF"
                android:layout_margin="@dimen/_3sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:weightSum="5"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/_2sdp"
                        android:padding="@dimen/_1sdp"
                        android:layout_weight="1"
                        android:src="@drawable/commission"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_40sdp"/>

                    <LinearLayout
                        android:orientation="vertical"
                        android:padding="@dimen/_4sdp"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_weight="3.5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textColor="@color/black"
                            android:textSize="@dimen/_13sdp"
                            android:textStyle="bold"
                            android:text="Commission Coin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:textSize="@dimen/_13sdp"
                            android:text="See your commission coin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>


                    </LinearLayout>
                    <ImageView
                        android:layout_gravity="center"
                        android:layout_weight="0.5"
                        android:src="@drawable/ic_round_arrow_forward_ios_24"
                        android:layout_width="@dimen/dimen_0dp"
                        android:layout_height="@dimen/_20sdp"/>


                </LinearLayout>
            </LinearLayout>




            <TextView
                android:paddingLeft="@dimen/_10sdp"
                android:id="@+id/txtPrivacyPolicyNav"
                android:drawablePadding="@dimen/_5sdp"
                android:drawableLeft="@drawable/ic_baseline_policy_24"
                android:paddingTop="@dimen/_10sdp"
                android:paddingBottom="@dimen/_10sdp"
                android:gravity="left|center_vertical"
                android:background="#0C00B0FF"
                android:textAllCaps="false"
                android:textSize="@dimen/_13sdp"
                android:text="Privacy Policy"
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:paddingLeft="@dimen/_10sdp"
                android:id="@+id/txtTermsAndConditionNav"
                android:drawablePadding="@dimen/_5sdp"
                android:drawableLeft="@drawable/ic_baseline_article_24"
                android:paddingTop="@dimen/_10sdp"
                android:paddingBottom="@dimen/_10sdp"
                android:gravity="left|center_vertical"
                android:background="#0C00B0FF"
                android:textAllCaps="false"
                android:textSize="@dimen/_13sdp"
                android:text="Terms of Use"
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </LinearLayout>
</ScrollView>